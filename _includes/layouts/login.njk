<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8" />
  <title>{% if title %}{{ title }} – {% endif %}Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/assets/style.css" />
</head>
<body class="login-page">
  <div class="retro-wrap">
    <div class="retro-window" role="dialog" aria-labelledby="loginTitle" aria-describedby="loginDesc">


      <div class="retro-body">
        <p class="retro-desc" id="loginDesc">Enter authorization code to proceed.</p>

        <form id="loginForm" class="retro-form" action="/en/" method="get" autocomplete="off" novalidate>
          <fieldset class="retro-fieldset">

            <label for="code" class="retro-label">Enter code:</label>
            <div class="retro-row">
              <input id="code" name="code" type="password" inputmode="numeric" pattern="[0-9]*"
                     placeholder="••••" class="retro-input" aria-label="Access code" required />
              <button class="retro-btn" type="submit">LOGIN</button>
            </div>

            <div id="err" class="retro-err" role="alert" aria-live="polite"></div>
          </fieldset>

        </form>
      </div>

    </div>
  </div>

  <script src="/assets/scripts/login.js"></script>
</body>
</html>
